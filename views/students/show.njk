{% extends "layout.njk" %}


{% block content %}

<div class="card">
    <section class="avatar" style="background: url({{ student.avatar_url }}) no-repeat center center"></section>
    <section class="details">

        <h3>Detalhes</h3>

        <div class="item">
            <div>Student</div>
            <div>{{ student.name}}</div>
        </div>

        <div class="item">
            <div>Email</div>
            <div>{{ student.email }}</div>
        </div>

        <div class="item">
            <div>Data de Aniversário</div>
            <div>{{ student.birth }}</div>
        </div>

        <div class="item">
        <div>Ano escolar</div>
            <div>
                {{ student.year }}
            </div>
        </div>

        <div class="item">
            <div>Carga horária semanal</div>
            <div>{{ student.count_hours }}</div>
        </div>

        <a href="/students/{{ student.id }}/edit" class="button">Editar</a>

    </section>
</div>

{% endblock content %}

