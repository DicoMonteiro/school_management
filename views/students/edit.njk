{% extends "layout.njk" %}


{% block content %}
<div class="card">
    <section class="avatar" style="background: url({{ student.avatar_url }}) no-repeat center center"></section>
    <section class="details">
       <div class="form-btn"> 
         <form method="POST" action="/students?_method=PUT">
   
            <h3>Editar Aluno</h3>

            {% include 'students/fields.njk' %}

            <input 
                type="hidden"
                name="id"
                value={{ student.id }}>

            <button class="btn" type="submit">Salvar</button>
         </form>

         <form id="form-delete" action="/students?_method=DELETE" method="post">
            <input type="hidden" name="id" value={{ student.id }}>
            <button class="btn" type="submit">Deletar</button>
         </form>
        </div>
    </section>
</div>

{% include 'students/confirm.njk' %}

{% endblock content %}
