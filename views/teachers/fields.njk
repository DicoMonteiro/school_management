<div class="item first">
    <div>Avatar URL</div>
    <div>
        <input 
            type="url" 
            name="avatar_url" 
            placeholder="http://"
            value="{{ teacher.avatar_url }}"
            >
    </div>
</div>

<div class="item">
    <div>Teacher</div>
    <div>
        <input 
            type="text" 
            name="name" 
            placeholder="Nome do(a) professor(a)"
            value="{{ teacher.name }}"
            >
    </div>
</div>

<div class="item">
    <div>Data de Nascimento</div>
    <div>
        <input 
            type="date" 
            name="birth"
            value="{{ teacher.birth }}"
            >
    </div>
</div>

<div class="item">
    <div>Grau de escolaridade</div>
    <div>
        <select name="escolaridade">
            <option value="medio"
            {% if teacher.escolaridade == 'medio' %}
                selected
            {% endif %}>Ensino Médio Completo</option> 
            <option value="superior"
            {% if teacher.escolaridade == 'superior' %}
                selected
            {% endif %}>Ensino Superior Completo</option>
            <option value="mba"
            {% if teacher.escolaridade == 'mba' %}
                selected
            {% endif %}>Especialização</option>
            <option value="mestrado"
            {% if teacher.escolaridade == 'mestrado' %}
                selected
            {% endif %}>Mestrado</option>
            <option value="doutorado"
             {% if teacher.escolaridade == 'doutorado' %}
                selected
            {% endif %}>Doutorado</option>
        </select>
    </div>
</div>

<div class="item">
    <div>Tipo de aula</div>
    <div>
        <span>
            <input 
                type="radio" 
                name="class_type" 
                value="Presencial" 
                {% if teacher.class_type == 'Presencial' %}
                checked
                {% endif %}>Presencial</span>
        <span>
            <input 
                type="radio" 
                name="class_type" 
                value="EAD"
                {% if teacher.class_type == 'EAD' %}
                checked
                {% endif %}>EAD</span>
    </div>
</div>

<div class="item">
    <div>Disciplinas de ensino</div>
    <div>
        <input 
            type="text" 
            name="disciplinas" 
            placeholder="Separe as disciplinas por vírgula"
            value="{{ teacher.disciplinas }}"
            >
    </div>
</div>